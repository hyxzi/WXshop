/* pages/user/index.wxss */
page {
  background-color: #ccc;
}
.user_info_wrap {
  height: 465rpx;
  width: 100%;
  background-color: var(--themeColor);
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 100%;
  filter: blur(5rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  top: 30%;
  left: 40%;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  font-size: 38rpx;
  text-align: center;
  margin: 20rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  top: 18%;
  left: 38%;
}
.user_info_wrap .user_btn .user_login {
  height: 100rpx;
  width: 170rpx;
  font-size: 35rpx;
  color: greenyellow;
  border-radius: 5rpx;
  background-color: floralwhite;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  top: -40rpx;
  transform: translateX(-50%);
  color: #666;
}
.user_content .user_main .user_history {
  background-color: #fff;
  display: flex;
}
.user_content .user_main .user_history navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .user_history navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .orders_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .user_main .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.user_content .user_main .orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_tact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
